<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :cover, as: :file %>
    <%= f.input :body %>
    <%= f.association :category %>
    <%= f.input :drafts %>
  </div>

  <div class="form-actions">
    <%= f.button :submit%>
  </div>
<% end %>
